{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowNetworkEngineer",
            "Effect": "Allow",
            "Action": [
                "events:PutTargets",
                "events:DescribeRule",
                "events:PutRule",
                "ec2:*",
                "ecs:StartTask",
                "ecs:StopTask",
                "ecs:UpdateService",
                "networkmanager:*",
                "directconnect:*",
                "ds:Describe*",
                "ds:List*",
                "health:Describe*",
                "logs:CreateLogGroup",
                "logs:Describe*",
                "logs:Get*",
                "logs:List*",
                "logs:StartQuery",
                "logs:StopQuery",
                "logs:TestMetricFilter",
                "logs:FilterLogEvents",
                "logs:PutResourcePolicy",
                "cloudwatch:List*",
                "cloudwatch:Get*",
                "cloudwatch:Describe*",
                "ram:ListResources",
                "ram:ListPermissions",
                "ram:GetResourceShares",
                "ram:ListResourceTypes",
                "ram:ListPrincipals",
                "ram:EnableSharingWithAwsOrganization",
                "ram:GetResourceShareAssociations",
                "ram:GetResourcePolicies",
                "ram:CreateResourceShare",
                "ram:GetResourceShareInvitations",
                "mgn:Describe*",
                "mgn:Get*",
                "mgn:List*",
                "mgn:Verify*",
                "workspaces:*",
                "ssm:*session",
                "ssm:GetConnectionStatus",
                "ssm:DescribeSessions",
                "sts:DecodeAuthorizationMessage"
            ],
            "Resource": "*"
        }
    ]
}
